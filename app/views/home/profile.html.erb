<div class="column is-three-fifths is-offset-one-fifth">

  <div class="columns">

    <div class="column is-4">
      <figure class="image is-128x128">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar %>
        <% else %>
          <img src="https://bulma.io/images/placeholders/128x128.png">
        <% end %>
      </figure>
    </div>

    <div class="column is-8">
      <div class="content is-normal">
        <strong class="title is-3"><%= @user.username %></strong>
        <%= link_to edit_profile_path, class: "button" do %>
          Edit Profile
        <% end %><br><br>
        <div class="columns">
          <div class="column control is-size-5"><strong>0</strong> <small>posts</small></div>
          <div class="column control is-size-5"><strong>0</strong> <small>followers</small></div>
          <div class="column control is-size-5"><strong>0</strong> <small>followings</small></div>
        </div>
        <p class="control is-size-6"><%= @user.name %></p>
        <p class="control is-size-6"><%= @user.bio %></p>
      </div>
    </div>
  </div>
  <hr />
</div>
